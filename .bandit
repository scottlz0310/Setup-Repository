[bandit]
# Bandit設定ファイル - セキュリティスキャンの除外設定

# 除外するテスト
skips = B404,B603,B607,B604,B314

# 除外理由:
# B404: subprocess モジュールは適切に使用されており、セキュリティリスクは管理されている
# B603: subprocess呼び出しは信頼できる入力のみを使用し、shell=Falseで実行
# B607: 実行可能パスは環境変数PATHから解決され、適切に検証されている
# B604: shell="sh"等の文字列をshell=Trueと誤検知するため除外
# B314: XMLパースは信頼できるカバレッジファイルのみを処理するため除外

# 重要なセキュリティチェックは維持
# B105: hardcoded_password_string
# B106: hardcoded_password_funcarg
# B107: hardcoded_password_default
# B108: hardcoded_tmp_directory
# B110: try_except_pass

# 除外するファイル
exclude_dirs = [
    "tests",
    ".venv",
    "venv",
    "build",
    "dist"
]

# 信頼度レベル
confidence = HIGH

# 重要度レベル
severity = HIGH
